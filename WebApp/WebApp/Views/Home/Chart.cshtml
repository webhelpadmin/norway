@model WebApp.Models.ChartModel

@{
    ViewBag.Title = "Chart";
}

<h2>Chart</h2>
<div id="container" style="width:100%; height:600px;"></div>
@section scripts
{
    @Scripts.Render("https://code.highcharts.com/highcharts.js")
    <script>
        document.addEventListener('DOMContentLoaded',
            function() {
                const chart = Highcharts.chart('container',
                    {
                        chart: {
                            type: 'line'
                        },
                        title: {
                            text: 'Complex percentage by days'
                        },
                        xAxis: {
                            categories: [@Html.Raw(Model.Categories)]
                        },
                        yAxis: {
                            title: {
                                text: 'Percents, %'
                            }
                        },
                        series: [
                            {
                                name: 'Percent',
                                data: [@Html.Raw(Model.Data)]
                            }
                        ]
                    });
            });
    </script>
}